                  <ab type="dorsal" place="verso" hand="hand16c">
                     <lb/>Bethreffennde die <lb/>zwo gemainden <placeName ref="loc000950"
                        >Senwald</placeName>
                     <lb/>unnd <placeName ref="loc000691">Saletz</placeName>
